<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="panel panel-default outside-loc-box", onclick="window.location.href = '<%= url_for location_path(location) %>'", style="background-image: url('<%= location.url %>')">
    <div class="panel-body 
      <% if (location.url != nil) %>
        loc-box-gradient
      <% else %>
        loc-box
      <% end %>"
    >

      <!-- Button trigger modal -->
      <div>
        <button 
          onclick="noBubble(this,event,<%= location.id %>)" class="btn btn-default btn-sm glyphicon glyphicon-plus pull-right list-name" data-toggle="modal" data-target="#myModal">
        </button>
      </div>


      <div class=" 
        <% if (location.url != nil) %>
          loc-content-gradient
        <% else %>
          loc-content
        <% end %>"
      >
        <strong><%= location.name %></strong>
        <br>
        <% if (location.michelinrate > 0) %>
          <% location.michelinrate.times do %>
            <span class='glyphicon glyphicon-star'></span>
          <% end %>
        <% else %>
          Bib Gourmand
        <% end %>

        <br>
        <%= location.city %>
      </div>
    </div>
  </div>
</div>